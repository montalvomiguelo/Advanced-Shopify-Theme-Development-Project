{% paginate collection.products by 20 %}

  <form action="{{ collection.url }}">

    <header id="header">
      <div class="row">
        <div class="col-lg-12">
          <h1>{{ collection.title | escape }}</h1>
          {% include 'subcategories' %}
        </div>
      </div>
    </header>

    {% include 'collection-controls' with 'list' %}

    <section id="collection">
      <div class="row auto-clear text-center">
        {% for product in collection.products %}
          {% comment %}
            Is this product on sale?
          {% endcomment %}
          {% assign on_sale = false %}

          {% if product.compare_at_price > product.price %}
            {% assign on_sale = true %}
          {% endif %}

          <div class="col-lg-12">
            <div class="product">
              <div class="row">
                <div class="col-xs-4">
                  <a href="{{ product.url }}" class="product-image-wrapper">
                    <img src="{{ product.featured_image | product_img_url: 'large' }}" class="img-responsive" />
                  </a>
                </div>
                <div class="col-xs-8 text-left">
                  <p class="lead">
                    {% if product.price_varies %}From{% endif %}
                    {{ product.price | money }}
                    {% if on_sale %}
                      <s>{{ product.compare_at_price | money }}</s>
                    {% endif %}
                  </p>
                  <h4>
                    <a href="{{ product.url }}">{{ product.title }}</a>
                  </h4>
                  <div class="rte product-description">
                    {{ product.description | strip_html | truncatewords: 20 }}
                  </div>
                </div>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </section>

    {% if paginate.pages > 1 %}
    <section id="pagination" class="row text-center">
      {{ paginate | default_pagination | replace: '&laquo; Previous', '&larr;' | replace: 'Next &raquo;', '&rarr;' }}
    </section>
    {% endif %}
    {% endpaginate %}

  </form>
