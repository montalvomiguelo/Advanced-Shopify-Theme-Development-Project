(function($) {

  // Remove the JS class on the body.
  $('body').removeClass('no-js');

  // Handle a click on a "remove" button on the cart page.
  $('[data-cart-remove]').click(function(e) {
    $('#updates-item-' + $(this).data('cartRemove')).val(0);
    $('#cart-form').submit();
  });

  //
  // You can add your own Javascript here.
  //

  // Update main product image when a thumbnail is clicked
  $('#product-thumbnails').on('click', 'a', function(evt) {
    evt.preventDefault();
    var newImage = $(this).attr('href');
    switchImage(newImage, null, $('#product-image')[0]);
  });

})(jQuery);
