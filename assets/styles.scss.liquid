//
// Variables.
//

$body-bg-color: #f7f7f7;

$navbar-bg-color: #000000;
$navbar-color: #ffffff;
$navbar-menu-color: #999999;
$navbar-menu-hover-color: #ffffff;

$button-bg-color: #006eff;
$button-color: #ffffff;

$swatch-color: #EEEEEE;
$text-color: #333333;

$font-family-headings: "Unica One", "HelveticaNeue", "Helvetica Neue", sans-serif;
$font-family-body: "Karla", "HelveticaNeue", "Helvetica Neue", sans-serif;

$phi: 1.618;

//
// Layout.
//

html, body {
  font-family: $font-family-body;
  background-color: $body-bg-color;
}

a {
  color: $button-bg-color;
  &:hover,
  &:focus {
    color: darken($button-bg-color, 15%);
  }
}

.row-space {
  margin-bottom: 30px;
}

#header {
  margin: $phi*2em 0;
  text-align: center;
}

#collection {
  margin: 30px 0;
}

#product {
  margin: 30px 0;
}

#cart {
  margin: 30px 0;
}

#pagination {
  margin: $phi*2em 0;
  > span {
    display: inline-block;
  }
  a {
    display: block;
  }
  a,
  .page.current {
    padding: ($phi / 3)*1em;
  }
}

.modal-footer {
  text-align: center !important;
}

//
// Buttons.
//

.button {
  display: inline-block;
  font-weight: 700;
  letter-spacing: 0.15em;
  text-transform: uppercase;
  padding: 15px 45px;
  cursor: pointer;
  background-color: $button-bg-color;
  color: $button-color;
  border: 1px solid transparent;
  text-decoration: none;
  text-align: center;
  vertical-align: middle;
  line-height: 1.375;
  font-family: $font-family-body;
  &:hover,
  &:focus {
    background: darken($button-bg-color, 10%);
    color: $button-color;
    text-decoration: none;
  }
}

.button-small {
  padding: 5px 10px;
  font-size: 0.85em;
}

.button-default {
  background-color: white;
  color: black;
  &:hover,
  &:focus {
    background: darken(white, 10%);
    color: black;
  }
}


//
// Navbar.
//

#navbar {
  background-color: $navbar-bg-color;
}

#navbar-top {
  padding: $phi*1rem 0;
  text-align: center;

  @media (min-width: 768px) {
    text-align: left;
  }

  font-size: 36px;
  line-height: 48px;
  color: $navbar-color;
  font-family: $font-family-headings;
}

#navbar-top a {
  color: $navbar-color;
  text-decoration: none;

  &:hover {
    color: $navbar-color;
  }
}

.navbar-main-menu {
  margin: 0 0 $phi*1em 0;
  padding: 0;
  text-align: center;
  @media (min-width: 768px) {
    text-align: left;
  }

  li {
    margin: 0;
    padding: 0;
    display: inline-block;
    line-height: $phi;

    & + li {
      margin-left: ($phi / 2)*1em;
    }

    a {
      color: $navbar-menu-color;
      letter-spacing: 0.6px;
      text-transform: uppercase;
      text-decoration: none;

      &:hover {
        color: $navbar-menu-hover-color;
      }
    }
  }

}

.navbar-cart-link {
  @extend .navbar-main-menu;
  @media (min-width: 768px) {
    text-align: right;
  }
}

//
// Collection pages.
//

.product {
  margin-bottom: $phi*1em;
}

.product-image-wrapper {
  display: block;
  overflow: hidden;
}


//
// You can add your own SCSS here.
//

select {
  -webkit-appearance: none !important;
  -moz-appearance: none !important;
  background-color: $swatch-color;
  border-radius: 0;
  background-image: url("data:image/svg+xml;base64,PHN2ZyB4bWxucz0iaHR0cDovL3d3dy53My5vcmcvMjAwMC9zdmciIHZlcnNpb249IjEuMSIgeD0iMTJweCIgeT0iMHB4IiB3aWR0aD0iMjRweCIgaGVpZ2h0PSIzcHgiIHZpZXdCb3g9IjAgMCA2IDMiIGVuYWJsZS1iYWNrZ3JvdW5kPSJuZXcgMCAwIDYgMyIgeG1sOnNwYWNlPSJwcmVzZXJ2ZSI+PHBvbHlnb24gcG9pbnRzPSI1Ljk5MiwwIDIuOTkyLDMgLTAuMDA4LDAgIi8+PC9zdmc+");
  background-position: 100% center;
  background-repeat: no-repeat;
  border-style: solid;
  border-width: 1px;
  padding: $phi*.5em $phi*1em;
  border-radius: 0;
}

.collection-controls {
  text-align: center;
  .button {
    display: none;
    .no-js & {
      display: inline-block;
    }
  }
  select {
    text-transform: uppercase;
    @media (min-width: 768px) {
      font-size: 1.1em;
    }
    & ~ select {
      margin-left: 1em;
    }
  }
}

.product-select {
  margin-bottom: $phi*1em;
}

.product-photos {
  margin-top: $phi*1em;
  @media (min-width: 768px) {
    margin-top: 0;
    margin-bottom: $phi*1em;
  }
}

.product-photos-thumb {
  margin-bottom: $phi*.5em;
}

.swatch-wrapper {
  margin-bottom: $phi * 1em;
  text-align: center;

  .header {
    margin-bottom: 10px;
    line-height: 1.1;
    font-weight: bold;
  }

  .no-js & {
    display: none;
  }

}

.swatch {
  // override background inline styles
  background: $swatch-color !important;
  border: 1px solid $swatch-color;
  color: $text-color;
  display: inline-block;
  padding: ($phi / 4 )*1em ($phi / 2)*1em;
  margin-bottom: ($phi / 2)*1em;

  & ~ .swatch {
    margin-left: ($phi / 2)*1em;
  }

  &:hover,
  &:focus {
    color: $text-color;
    text-decoration: none;
  }

  &.selected {
    border-color: $text-color;
  }

  &.soldout {
    position: relative;
    &:before {
      position: absolute;
      content: "";
      left: 50%;
      top: 0;
      bottom: 0;
      border-left: 1px solid;
      border-color: #1c1d1d;
      -webkit-transform: rotate(45deg);
      -moz-transform: rotate(45deg);
      -ms-transform: rotate(45deg);
      -o-transform: rotate(45deg);
      transform: rotate(45deg);
    }
  }

}

.product-description {
  margin: $phi*1em 0;
  @media (min-width: 768px) {
    margin-top: 0;
  }
}

.product-price {
  font-size: $phi*.75em;
}

.subcategories li {
  line-height: 2.5;
  a {
    font-size: ($phi / 2)*1em;
    padding: .25em .5em;
    @extend .button;
    @extend .button-default;
  }
  &.active {
    a {
      background-color: $button-bg-color;
      color: $button-color;
    }
  }
}

note, .errors {
  border: 1px solid transparent;
  font-size: 0.9em;
  margin: $phi*1em 0;
  padding: $phi*.5em $phi*1em;
  text-align: center;
}

.form-error, .errors {
  background-color: #fff6f6;
  border-color: #d02e2e;
  color: #d02e2e;
}

.close {
  float: right;
  font-size: 21px;
  font-weight: 700;
}

button.close {
  -webkit-appearance: none;
  padding: 0;
  cursor: pointer;
  background: 0 0;
  border: 0;
}

/* Override Bootstrap's default container.*/
@media (min-width: 1200px) {
  .container {
    width: 970px;
  }
}

/*============================================================================
  Clear Rows when doing multi-responsive columns - Bootstrap 3
  Based on http://stackoverflow.com/questions/26939104/clear-rows-when-doing-multi-responsive-columns-bootstrap-3
==============================================================================*/
@media (min-width:1200px){
  .auto-clear .col-lg-1:nth-child(12n+1){clear:left;}
  .auto-clear .col-lg-2:nth-child(6n+1){clear:left;}
  .auto-clear .col-lg-3:nth-child(4n+1){clear:left;}
  .auto-clear .col-lg-4:nth-child(3n+1){clear:left;}
  .auto-clear .col-lg-6:nth-child(odd){clear:left;}
}
@media (min-width:992px) and (max-width:1199px){
  .auto-clear .col-md-1:nth-child(12n+1){clear:left;}
  .auto-clear .col-md-2:nth-child(6n+1){clear:left;}
  .auto-clear .col-md-3:nth-child(4n+1){clear:left;}
  .auto-clear .col-md-4:nth-child(3n+1){clear:left;}
  .auto-clear .col-md-6:nth-child(odd){clear:left;}
}
@media (min-width:768px) and (max-width:991px){
  .auto-clear .col-sm-1:nth-child(12n+1){clear:left;}
  .auto-clear .col-sm-2:nth-child(6n+1){clear:left;}
  .auto-clear .col-sm-3:nth-child(4n+1){clear:left;}
  .auto-clear .col-sm-4:nth-child(3n+1){clear:left;}
  .auto-clear .col-sm-6:nth-child(odd){clear:left;}
}
@media (max-width:767px){
  .auto-clear .col-xs-1:nth-child(12n+1){clear:left;}
  .auto-clear .col-xs-2:nth-child(6n+1){clear:left;}
  .auto-clear .col-xs-3:nth-child(4n+1){clear:left;}
  .auto-clear .col-xs-4:nth-child(3n+1){clear:left;}
  .auto-clear .col-xs-6:nth-child(odd){clear:left;}
}
