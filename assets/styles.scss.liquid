//
// Buttons.
//

.button {
  display: inline-block;
  font-weight: 700;
  letter-spacing: 0.15em;
  text-transform: uppercase;
  padding: 15px 45px;
  cursor: pointer;
  background-color: $button-bg-color;
  color: $button-color;
  border: 1px solid transparent;
  text-decoration: none;
  text-align: center;
  vertical-align: middle;
  line-height: 1.375;
  font-family: $font-family-body;
}

.button-small {
  padding: 5px 10px;
  font-size: 0.85em;
}

.button-default {
  background-color: white;
  color: black;
}


//
// Navbar.
//

#navbar {
  background-color: $navbar-bg-color;
}

#navbar-top {
  padding: 15px 30px;

  font-size: 36px;
  line-height: 48px;
  color: $navbar-color;
  font-family: $font-family-headings;
}

#navbar-top a {
  color: $navbar-color;
  text-decoration: none;

  &:hover {
    color: $navbar-color;
  }
}

.navbar-main-menu {

  margin: 0;
  padding: 15px;

  li {
    margin: 0;
    padding: 0;
    display: inline-block;

    a {
      padding: 15px;

      color: $navbar-menu-color;
      letter-spacing: 0.6px;
      text-transform: uppercase;
      text-decoration: none;

      &:hover {
        color: $navbar-menu-hover-color;
      }
    }
  }

  &.right-aligned {
    text-align: right;
  }

}


//
// Collection pages.
//

.product {

}

.product-image-wrapper {
  display: block;
  height: 240px;
  overflow: hidden;
}


//
// Utilities.
//

.clearfix:before,
.clearfix:after,
.dl-horizontal dd:before,
.dl-horizontal dd:after,
.container:before,
.container:after,
.container-fluid:before,
.container-fluid:after,
.row:before,
.row:after {
  content: " ";
  display: table;
}
.clearfix:after,
.dl-horizontal dd:after,
.container:after,
.container-fluid:after,
.row:after {
  clear: both;
}
.center-block {
  display: block;
  margin-left: auto;
  margin-right: auto;
}
.pull-right {
  float: right !important;
}
.pull-left {
  float: left !important;
}
.hide {
  display: none !important;
}
.show {
  display: block !important;
}
.invisible {
  visibility: hidden;
}
.text-hide {
  font: 0/0 a;
  color: transparent;
  text-shadow: none;
  background-color: transparent;
  border: 0;
}
.hidden {
  display: none !important;
}
.affix {
  position: fixed;
}

